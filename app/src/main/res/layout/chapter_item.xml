<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/card_margin">

    <ImageView
        android:id="@+id/ivcPlayPause"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginEnd="@dimen/card_margin"
        app:srcCompat="@mipmap/ic_track" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                app:srcCompat="@mipmap/ic_clock" />

            <TextView
                android:id="@+id/tvcDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_weight="0"
                android:text="10:30s"
                android:textSize="12sp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/card_margin"
                android:layout_marginStart="@dimen/card_padding"
                android:layout_weight="0"
                app:srcCompat="@mipmap/ic_save" />

            <TextView
                android:id="@+id/tvcSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="2.3Mb"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:textSize="12sp"
                android:textStyle="italic" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvcTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/line_spacing"
            android:layout_marginTop="@dimen/line_spacing"
            android:text="Title"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

</LinearLayout>